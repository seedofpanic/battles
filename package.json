{
  "name": "telegram-duel-bot",
  "version": "0.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:prod": "forever start node_modules/.bin/ts-node src/index.ts",
    "stop:prod": "forever stop node_modules/.bin/ts-node",
    "test": "cross-env MODE=\"test\" jest",
    "testci": "cross-env MODE=\"test\" jest --runInBand",
    "lint": "tslint \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/express-ws": "^3.0.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "express-ws": "^4.0.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node-telegram-bot-api": "^0.28.2",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "forever": "^0.15.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
