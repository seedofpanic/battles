{
  "name": "telegram-duel-bot",
  "bin": {
    "jest": "/.bin/jest"
  },
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node_modules/.bin/ts-node src/index.ts",
    "start:prod": "node_modules/.bin/forever start node_modules/.bin/ts-node src/index.ts",
    "stop:prod": "node_modules/.bin/forever stop node_modules/.bin/ts-node",
    "test": "export MODE=test && node_modules/.bin/jest",
    "wintest": "set MODE=test && jest",
    "testci": "export MODE=test && node_modules/.bin/jest --runInBand",
    "lint": "node_modules/.bin/tslint \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-telegram-bot-api": "^0.30.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node-telegram-bot-api": "^0.28.2",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "forever": "^0.15.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
